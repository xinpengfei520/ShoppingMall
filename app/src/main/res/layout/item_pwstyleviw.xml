<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#60000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_goods_cover"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/shipin" />

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="￥100.00"
                android:textColor="@android:color/holo_red_light"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="35dp"
                android:text="商品编号:13123412312"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/close_button" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:text="颜色" />

        <RadioGroup
            android:id="@+id/rg_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_color_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/radiobutton_selector"
                android:button="@null"
                android:padding="2dp"
                android:text="深空灰"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_color_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/radiobutton_selector"
                android:button="@null"
                android:padding="2dp"
                android:text="浅蓝色"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_color_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/radiobutton_selector"
                android:button="@null"
                android:padding="2dp"
                android:text="珊瑚绿"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_color_pink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/radiobutton_selector"
                android:button="@null"
                android:padding="2dp"
                android:text="可爱粉"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_color_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/radiobutton_selector"
                android:button="@null"
                android:padding="2dp"
                android:text="玫瑰红"
                android:textSize="14sp" />

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="选择图案" />

        <RadioGroup
            android:id="@+id/rg_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_shape_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/radiobutton_selector"
                android:button="@null"
                android:padding="2dp"
                android:text="小圆圈"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_shape_flower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/radiobutton_selector"
                android:button="@null"
                android:padding="2dp"
                android:text="玫瑰花"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_shape_petal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/radiobutton_selector"
                android:button="@null"
                android:padding="2dp"
                android:text="碎花瓣"
                android:textSize="14sp" />

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="选择尺寸" />

        <RadioGroup
            android:id="@+id/rg_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/radiobutton_selector"
                android:button="@null"
                android:padding="2dp"
                android:text="18cm"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_size_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/radiobutton_selector"
                android:button="@null"
                android:padding="2dp"
                android:text="22cm"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_size_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/radiobutton_selector"
                android:button="@null"
                android:padding="2dp"
                android:text="26cm"
                android:textSize="14sp" />

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="给卖家留言:" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:gravity="start"
            android:hint="点击此处留下脚印"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_joinCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff0000"
            android:gravity="center"
            android:padding="6dp"
            android:text="加入购物车"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

    </LinearLayout>

</RelativeLayout>